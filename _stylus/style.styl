@font-face
    font-family DIN
    src url('/ee-seminar/font/DIN_OT/DINOT-Light.otf') format('opentype')
    font-weight 300

@font-face
    font-family DIN
    src url('/ee-seminar/font/DIN_OT/DINOT.otf') format('opentype')
    font-weight 400
    
@font-face
    font-family DIN
    src url('/ee-seminar/font/DIN_OT/DINOT-Medium.otf') format('opentype')
    font-weight 500
    
@font-face
    font-family DIN
    src url('/ee-seminar/font/DIN_OT/DINOT-Bold.otf') format('opentype')
    font-weight 700

font-size = 13pt
text-dark = #111216
text-lite = lighten(text-dark, 97%)

a
    color inherit

    &:active
        color lighten(text-dark, 50%)

*
    margin 0
    padding 0

html, body
    min-height 100%
    height 100%
    max-height 100%

body
    font-family DIN
    font-weight 300
    font-size font-size
    background-color text-dark
    color text-lite

h1, h2, h3, h4, h5, h6
    padding-bottom .2em
    
h1, h2
    font-weight 400

h3
    border-bottom 1px solid darken(text-lite, 10%)
    padding-bottom 0em
    margin-bottom -1rem

h3, h4, h5, h6
    font-weight 300

ul, ol
    padding-left 2.5rem

p
    padding-bottom .5rem

#container
    display flex
    height 100%
    max-height 100%

#sidebar
    color text-dark
    background-color text-lite
    flex 0 0 14rem

    a.home
        text-align center
        text-decoration none

ul#class-list
    padding 0
    list-style-type none

    a
        text-decoration none
    li
        box-sizing border-box
        padding .6rem
        padding-left 1rem
        
        width 100%

        &.selected, &:hover
            color text-lite
            background-color text-dark !important

        &.topic
            font-size .75em
            padding .1rem
            padding-left 2rem
            background-color darken(text-lite, 10%)

            h2
                font-weight 300

#main
    padding 1rem
    flex 0 1 auto
    width 100%
    overflow scroll

#main.post
    .full-width *
        width 100%
        box-sizing border-box

    img
        width 50%
        float right
        clear both
        padding 1rem

    blockquote
        font-style italic
        font-size 1.5rem
        
        color darken(text-lite, 20%)